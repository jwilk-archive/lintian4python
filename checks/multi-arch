package Lintian::multi_arch;

use strict;
use warnings;

use Lintian::Tags qw(tag);

my $dist_packages_re = qr{
^(?:
  usr/lib/pyshared/python2\.\d+ # python-support >= 0.90
| usr/share/pyshared # python-support >= 0.90, python-central, dh_python2
| usr/lib/python-support/[^/]+/python2\.\d+ # python-support < 0.90
| usr/share/python-support/[^/]+ # python-support < 0.90
| usr/lib/python2\.\d+/(?:site|dist)-packages # python-central, dh_python2
| usr/lib/python3/dist-packages # Python 3.X:
)
}x;

sub run {
    my ($package, $type, $info) = @_;
    my $ma = $info->field('multi-arch') // 'none';
    my $has_modules = 0;
    for my $file ($info->sorted_index) {
        next unless $info->index($file)->type eq '-';
        if ($file =~ m,^$dist_packages_re/.*[.](py|so)$,o) {
            $has_modules = 1;
            last; 
        }
    }
    if ($has_modules and ($ma eq 'foreign')) {
        tag 'python-module-in-multi-arch-foreign-package';
    }
}

1;

