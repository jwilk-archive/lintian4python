package Lintian::pth;

use strict;
use warnings;

use Lintian::Tags qw(tag);
use Util;

sub run {

my ($pkg, $type, $info) = @_;

my $version = $info->field('version');
my %egg_versions = ();
my $index = $info->index;
my $depends = $info->relation('strong');
for my $file (@{$info->sorted_index}) {
    next if $index->{$file}->{link};
    if ($file =~ m,usr/(?:lib/python[23](?:\.\d+)?/(?:site|dist)packages|share/(?:pyshared|python-support/[^/]+))/([^/]+)[.]pth$,) {
        open(PTH, '<', $info->unpacked($file)) or fail("cannot open .pth file: $!");
        while (<PTH>) {
            if (m,^import[ \t],) {
                # executable import statements
                # TODO: allow setuptools magic, but discourage anything else
            } else {
                chomp;
                tag 'pth-file-modifies-sys.path', $file, $_;
            }
        }
    }
}

}

1;

