package Lintian::pyflakes;

use strict;
use warnings;

use Lintian::Tags qw(tag);
use Util;

sub run {

my ($pkg, $type, $info) = @_;
my $index = $info->index;
for my $file (@{$info->sorted_index}) {
    next if $index->{$file}->{link};
    if ($file =~ m,usr/(?:lib/python2\.\d+/(?:site|dist)-packages|share/(?:pyshared|python-support/[^/]+))/.+[.]py$,) {
        my $unpacked = $info->unpacked($file);
        open(PYFLAKES, '-|', "$ENV{LINTIAN_ROOT}/helpers/pyflakes", $unpacked) or fail("cannot execute pyflakes helper");
        while (<PYFLAKES>) {
            if (m,(pyflakes-\S+) (.*),) {
                my $tag = $1;
                my $rest = $2;
                tag $tag, "$file:$rest";
            } else {
                if (s/^\Q$unpacked\E:/$file:/g) {
                    chomp;
                    tag 'syntax-error', $_;
                    last;
                }
            }
        }
        close(PYFLAKES) or fail("pyflakes helper failed");
    }
}

}

1;

