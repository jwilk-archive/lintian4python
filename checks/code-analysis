package Lintian::code_analysis;

use strict;
use warnings;

use Lintian::Tags qw(tag);
use Lintian::Util qw(fail);

use Lintian::Python qw(classify_python_modules);

sub run {

my ($pkg, $type, $info) = @_;
my $classification = classify_python_modules($pkg, $info);
for my $file (@{$info->sorted_index}) {
    my $version = $classification->{$file};
    next unless defined $version;
    $version = '' if $version == 2;
    my $interpreter = "python$version";
    my $unpacked = $info->unpacked($file);
    open(my $fp, '-|', $interpreter, "$ENV{LINTIAN_ROOT}/helpers/code-analysis", $unpacked) or fail("cannot execute code-analysis helper");
    while (<$fp>) {
        if (m,(\S+) (-|\d+)(?: (.+))?,) {
            my $tag = $1;
            my $lineno = $2;
            my $extra = $3;
            my $message = $file;
            if ($lineno ne '-') {
                $message .= ":$lineno";
            }
            if (defined $extra) {
                $message .= ": $extra";
            }
            tag $tag, $message;
        }
    }
    close($fp) or fail("code-analysis helper failed");
}

}

1;

