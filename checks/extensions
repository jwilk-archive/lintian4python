package Lintian::extensions;

use strict;
use warnings;

use Lintian::Tags qw(tag);
use Util;

sub run {

my ($pkg, $type, $info, $proc) = @_;

my $srcpkg = $proc->pkg_src() // '';
my $index = $info->index;
my $uses_numpy_abi = 0;
for my $file (@{$info->sorted_index}) {
    next if $index->{$file}->{link};
    if ($file =~ m,usr/lib/(?:python2\.\d+/(?:site|dist)-packages|pyshared/python2\.\d)/.*\.so$,) {
        my $string = slurp_entire_file("strings/$file");
        if ($string =~ m/module compiled against ABI version %x but this version of numpy is %x/) {
            $uses_numpy_abi = 1;
            last;
        }
    }
}
if ($srcpkg eq 'python-numpy') {
    $uses_numpy_abi = 0;
}
if ($uses_numpy_abi) {
    my $depends = $info->relation('strong')->unparse();
    tag 'missing-versioned-dependency-on-numpy'
        unless
            $depends =~ /(^|\s|,)python-numpy\s+\(>[>=]/ and
            $depends =~ /(^|\s|,)python-numpy\s+\(<</;
}

}

1;

